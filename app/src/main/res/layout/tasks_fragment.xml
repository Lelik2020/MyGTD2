<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/filterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dip"

        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:contentDescription="@string/cd_application_menu"
            android:id="@+id/menu2"
            android:padding="4dip"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:layout_margin="0dip"
            android:tint="@color/foobnix_light_blue"
            android:layout_width="@dimen/wh_button"
            android:layout_height="@dimen/wh_button"
            android:src="@drawable/glyphicons_600_menu"
            android:visibility="gone"
            />



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            app:shapeAppearance="@style/Rounded"
            >




            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/outlinedTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MyInputFindBookStyle"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/filterLine"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="@string/searchline"
                    app:hintTextAppearance="@style/HintText"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/countTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dip"

                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_marginRight="-8dip"
                android:id="@+id/myAutoCompleteImage"
                style="@style/buttonClear"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/wh_button_big"
                android:layout_height="@dimen/wh_button_big"
                android:layout_toLeftOf="@+id/cleanFilter"
                android:layout_weight="0"
                android:src="@drawable/glyphicons_739_check" />

            <ImageView
                android:id="@+id/cleanFilter"
                style="@style/buttonClear"
                android:layout_width="@dimen/wh_button_big"
                android:layout_height="@dimen/wh_button_big"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/countTasks"
                android:gravity="bottom"
                android:layout_weight="0"
                android:contentDescription="@string/cd_clear_search_reasult"
                android:src="@drawable/glyphicons_599_menu_close" />
        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/secondTopPanel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/bg_search_second"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:contentDescription="@string/cd_sort_results"
                android:id="@+id/sortBy"
                android:layout_width="@dimen/sort_by_size"
                android:layout_height="45dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="8dip"
                android:singleLine="true"
                android:text="Название книги"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <ImageView
                android:visibility="visible"
                android:contentDescription="@string/cd_sort_order"
                android:id="@+id/sortOrder"
                android:layout_width="@dimen/wh_button_small"
                android:layout_height="@dimen/wh_button_small"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:padding="4dip"
                android:src="@drawable/glyphicons_221_chevron_down"
                android:tint="@color/white" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/tint_divider" />

            <ImageView
                android:contentDescription="@string/update_library"
                android:id="@+id/onRefresh"
                style="@style/buttonWhite"
                android:layout_width="@dimen/wh_button"
                android:layout_height="@dimen/wh_button"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/glyphicons_82_refresh"
                android:visibility="gone"
                />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/tint_divider" />

            <ImageView
                android:contentDescription="@string/cd_view_menu"
                android:id="@+id/onGridList"
                style="@style/buttonWhite"
                android:layout_width="@dimen/wh_button"
                android:layout_height="@dimen/wh_button"
                android:src="@drawable/my_glyphicons_114_paragraph_justify"
                android:visibility="gone"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_below="@+id/filterLayout">


         <androidx.appcompat.widget.LinearLayoutCompat
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical" >


                <androidx.appcompat.widget.LinearLayoutCompat
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/containerOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1sp"
                    android:layout_weight="1"
                    android:background="@drawable/roundrect_1"
                    android:orientation="horizontal"
                >

                    <TextView
                        android:id="@+id/tv_overdue_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/roundrect_1"
                        android:layout_weight="1"
                        android:text="@string/overduetask"
                        style="@style/textLink"
                        android:textColor="@color/white"
                        android:singleLine="false"
                        android:maxLines="2"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/expandedIcon1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:layout_marginRight="5dp"


                        android:src="@drawable/cr3_toc_item_collapsed" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tasks_recyclerview_overdue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_alignParentBottom="true"


                android:paddingTop="@dimen/wh_tasks_description_text">

            </androidx.recyclerview.widget.RecyclerView>

            <androidx.appcompat.widget.LinearLayoutCompat
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/containerToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1sp"
                android:layout_weight="1"

                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_today_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/roundrect_2"
                    android:text="@string/maketoday"
                    style="@style/textLink"
                    android:textColor="@color/white"
                    android:singleLine="false"
                    android:maxLines="2"
                    tools:ignore="HardcodedText" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tasks_recyclerview_today"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_alignParentBottom="true"


                android:paddingTop="@dimen/wh_tasks_description_text">

            </androidx.recyclerview.widget.RecyclerView>

             <androidx.appcompat.widget.LinearLayoutCompat
                 xmlns:tools="http://schemas.android.com/tools"
                 android:id="@+id/containerTomorrow"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="1sp"
                 android:layout_weight="1"

                 android:orientation="vertical"
                 >

                 <TextView
                     android:id="@+id/tv_tomorrow_tasks"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="2dp"
                     android:background="@drawable/roundrect"
                     android:text="@string/maketomorrow"
                     style="@style/textLink"
                     android:singleLine="false"
                     android:maxLines="2"
                     android:textColor="@color/white"
                     tools:ignore="HardcodedText" />

             </androidx.appcompat.widget.LinearLayoutCompat>

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/tasks_recyclerview_tomorrow"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"

                 android:layout_alignParentBottom="true"


                 android:paddingTop="@dimen/wh_tasks_description_text">

             </androidx.recyclerview.widget.RecyclerView>

             <androidx.appcompat.widget.LinearLayoutCompat
                 xmlns:tools="http://schemas.android.com/tools"
                 android:id="@+id/containerNextSevenDays"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="1sp"
                 android:layout_weight="1"

                 android:orientation="vertical"
                 >

                 <TextView
                     android:id="@+id/tv_nextsevendays_tasks"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="2dp"
                     android:background="@drawable/roundrect"
                     android:text="@string/makenextweek"
                     style="@style/textLink"
                     android:singleLine="false"
                     android:maxLines="2"
                     android:textColor="@color/white"
                     tools:ignore="HardcodedText" />

             </androidx.appcompat.widget.LinearLayoutCompat>

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/tasks_recyclerview_nextsevendays"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"

                 android:layout_alignParentBottom="true"


                 android:paddingTop="@dimen/wh_tasks_description_text">

             </androidx.recyclerview.widget.RecyclerView>

             <androidx.appcompat.widget.LinearLayoutCompat
                 xmlns:tools="http://schemas.android.com/tools"
                 android:id="@+id/containerAfterWeek"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="1sp"
                 android:layout_weight="1"

                 android:orientation="vertical"
                 >

                 <TextView
                     android:id="@+id/tv_afterweek_tasks"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="2dp"
                     android:background="@drawable/roundrect"
                     android:text="@string/makeafterweek"
                     style="@style/textLink"
                     android:singleLine="false"
                     android:maxLines="2"
                     android:textColor="@color/white"
                     tools:ignore="HardcodedText" />

             </androidx.appcompat.widget.LinearLayoutCompat>

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/tasks_recyclerview_afterweek"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"

                 android:layout_alignParentBottom="true"


                 android:paddingTop="@dimen/wh_tasks_description_text">

             </androidx.recyclerview.widget.RecyclerView>

             <androidx.appcompat.widget.LinearLayoutCompat
                 xmlns:tools="http://schemas.android.com/tools"
                 android:id="@+id/containerAfterTwoWeek"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="1sp"
                 android:layout_weight="1"

                 android:orientation="vertical"
                 >

                 <TextView
                     android:id="@+id/tv_aftertwoweek_tasks"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="2dp"
                     android:background="@drawable/roundrect"
                     android:text="@string/makeaftertwoweek"
                     style="@style/textLink"
                     android:singleLine="false"
                     android:maxLines="2"
                     android:textColor="@color/white"
                     tools:ignore="HardcodedText" />

             </androidx.appcompat.widget.LinearLayoutCompat>

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/tasks_recyclerview_aftertwoweek"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"

                 android:layout_alignParentBottom="true"


                 android:paddingTop="@dimen/wh_tasks_description_text">

             </androidx.recyclerview.widget.RecyclerView>

             <androidx.appcompat.widget.LinearLayoutCompat
                 xmlns:tools="http://schemas.android.com/tools"
                 android:id="@+id/containerInFuture"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="1sp"
                 android:layout_weight="1"

                 android:orientation="vertical"
                 >

                 <TextView
                     android:id="@+id/tv_infuture_tasks"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="2dp"
                     android:background="@drawable/roundrect"
                     android:text="@string/makeinfuture"
                     style="@style/textLink"
                     android:singleLine="false"
                     android:maxLines="2"
                     android:textColor="@color/white"
                     tools:ignore="HardcodedText" />

             </androidx.appcompat.widget.LinearLayoutCompat>

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/tasks_recyclerview_infuture"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"

                 android:layout_alignParentBottom="true"


                 android:paddingTop="@dimen/wh_tasks_description_text">

             </androidx.recyclerview.widget.RecyclerView>

             <androidx.appcompat.widget.LinearLayoutCompat
                 xmlns:tools="http://schemas.android.com/tools"
                 android:id="@+id/containerNoEndDate"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="1sp"
                 android:layout_weight="1"

                 android:orientation="vertical"
                 >

                 <TextView
                     android:id="@+id/tv_noenddate_tasks"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="2dp"
                     android:background="@drawable/roundrect_4"
                     android:text="@string/makenoenddate"
                     style="@style/textLink"
                     android:singleLine="false"
                     android:maxLines="2"
                     android:textColor="@color/white"
                     tools:ignore="HardcodedText" />

             </androidx.appcompat.widget.LinearLayoutCompat>

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/tasks_recyclerview_noenddate"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"

                 android:layout_alignParentBottom="true"


                 android:paddingTop="@dimen/wh_tasks_description_text">

             </androidx.recyclerview.widget.RecyclerView>

             <androidx.appcompat.widget.LinearLayoutCompat
                 xmlns:tools="http://schemas.android.com/tools"
                 android:id="@+id/containerClosed"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="1sp"
                 android:layout_weight="1"

                 android:orientation="vertical"
                 >

                 <TextView
                     android:id="@+id/tv_closed_tasks"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="2dp"
                     android:background="@drawable/roundrect_3"
                     android:text="@string/closedtasks"
                     style="@style/textLink"
                     android:singleLine="false"
                     android:maxLines="2"
                     android:textColor="@color/white"
                     tools:ignore="HardcodedText" />

             </androidx.appcompat.widget.LinearLayoutCompat>

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/tasks_recyclerview_closed"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"

                 android:layout_alignParentBottom="true"


                 android:paddingTop="@dimen/wh_tasks_description_text">

             </androidx.recyclerview.widget.RecyclerView>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </ScrollView>

</RelativeLayout>

