<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alltargetinfo"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="2sp"

    android:layout_marginTop="2sp"
    android:layout_marginLeft="2sp"
    android:layout_marginRight="2sp"
    android:layout_marginBottom="2sp"

    android:animateLayoutChanges="true"
    >


    <RelativeLayout
        android:id="@+id/targetinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:padding="3sp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lltitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >




            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ltargettitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >


                <ImageView
                    android:id="@+id/target_icon"
                    android:layout_width="@dimen/wh_btn_small"
                    android:layout_height="@dimen/wh_btn_small"
                    android:layout_weight="0"
                    android:src="@drawable/target4"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:id="@+id/targettitle"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingLeft="5sp"
                    android:textColor="@color/text_black_100"
                    />
                <androidx.appcompat.widget.LinearLayoutCompat

                    android:id="@+id/lnrLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:layout_weight="0"
                    >



                    <com.apg.mobile.roundtextview.RoundTextView
                        android:id="@+id/targetcount1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/wh_btn_small"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="12sp"

                        android:textColor="@color/text_black_100"
                        app:bgColor="@color/active_meeting"
                        app:topLeftCorner="8sp"
                        app:bottomLeftCorner="8sp"
                        app:topRightCorner="0sp"
                        app:bottomRightCorner="0sp"
                        android:visibility="invisible"
                        />

                    <com.apg.mobile.roundtextview.RoundTextView
                        android:id="@+id/targetcount2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/wh_btn_small"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        />

                    <com.apg.mobile.roundtextview.RoundTextView
                        android:id="@+id/targetcount3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/wh_btn_small"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        />
                    <com.apg.mobile.roundtextview.RoundTextView
                        android:id="@+id/targetcount4"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/wh_btn_small"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textSize="12sp"
                        android:visibility="invisible"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>






            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</androidx.cardview.widget.CardView>