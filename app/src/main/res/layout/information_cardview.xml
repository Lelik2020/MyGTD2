<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/allinfoinfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    style="@style/InfoCardViewStyle"



    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llinfotitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linfotitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >


            <ImageView
                android:id="@+id/tasktype"
                android:layout_width="@dimen/wh_button_small2"
                android:layout_height="@dimen/wh_button_small2"
                android:layout_weight="0"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"

                />

            <TextView
                android:id="@+id/tasktitle"
                style="@style/textLinkTaskCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_horizontal|right"
                android:text="Name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/informationtitle"
                style="@style/txtTaskTitleTaskCard2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5sp"
                android:text="Name"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/comments"
                android:layout_width="@dimen/wh_button_small2"
                android:layout_height="@dimen/wh_button_small2"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                android:src="@drawable/comments3"
                android:tint="@color/colorPrimary" />


            <ImageView
                android:id="@+id/editTask"
                android:layout_width="@dimen/wh_button_small2"
                android:layout_height="@dimen/wh_button_small2"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                android:src="@drawable/edittask"
                android:tint="@color/colorPrimary" />





            <ImageView
                android:id="@+id/itemMenu"
                android:layout_width="@dimen/wh_button_small2"
                android:layout_height="@dimen/wh_button_small2"
                android:layout_weight="0"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4sp"
                android:src="@drawable/glyphicons_518_option_vertical"
                android:tint="@color/colorPrimary" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/infoinformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linfotitle"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ldetailstitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"

                >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_black_100" />

                <TextView
                    android:id="@+id/taskdetail"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5sp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="9sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/infoTimeReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ldetailstitle"
                android:layout_weight="0"

                >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_black_100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status"
                    android:layout_weight="0"
                    android:text="@string/date_create"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"

                    />

                <TextView
                    android:id="@+id/date_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"

                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"

                    />

                <com.apg.mobile.roundtextview.RoundTextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="2dp"
                    android:text="Новая"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    app:allCorner="8dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</androidx.cardview.widget.CardView>