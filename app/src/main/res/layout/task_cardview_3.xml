<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alltaskinfo"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/TaskCardViewStyle"

    android:padding="2sp"


    android:animateLayoutChanges="true"


    >


    <!--
    <FrameLayout

        android:layout_width="1sp"
        android:layout_height="match_parent"
        android:background="@drawable/card_edge"/>
    -->

    <RelativeLayout
        android:id="@+id/taskinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"

        android:padding="2sp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lltasktitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ltasktitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >


                <ImageView
                    android:id="@+id/tasktype"
                    android:layout_width="@dimen/wh_button_small3"
                    android:layout_height="@dimen/wh_button_small3"
                    android:layout_weight="0"
                    android:background="?android:attr/selectableItemBackground"


                    />

                <TextView
                    android:id="@+id/tasktitle"
                    style="@style/textLink2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="Name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tasktitle2"
                    style="@style/txtTaskTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5sp"
                    android:text="Name"
                    android:textStyle="bold" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/text_black_100" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lparenttasktitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                tools:ignore="MissingConstraints">

                <TextView
                    style="@style/txtTaskTitleTaskCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="@string/parentTask"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:id="@+id/parenttasktype"
                    android:layout_width="@dimen/wh_button_small3"
                    android:layout_height="@dimen/wh_button_small3"
                    android:layout_weight="0"
                    android:background="?android:attr/selectableItemBackground"


                    />

                <TextView
                    android:id="@+id/parenttasktitle"
                    style="@style/textLinkTaskCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="Name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/parenttasktitle2"
                    style="@style/txtTaskTitleTaskCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5sp"
                    android:text="Name"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/text_black_100" />


            <androidx.appcompat.widget.LinearLayoutCompat

                android:id="@+id/taskInfo1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="2sp">

                <TextView
                    style="@style/txtTaskTitleTaskCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"

                    android:gravity="center_vertical"
                    android:text="@string/priority"
                    android:textStyle="bold"
                    android:visibility="gone"

                    />


                <ImageView

                    android:id="@+id/priorityicon"
                    android:layout_width="@dimen/wh_button_small3"
                    android:layout_height="@dimen/wh_button_small3"
                    android:layout_weight="0"
                    android:background="?android:attr/selectableItemBackground"

                    android:src="@drawable/folder" />


                <TextView
                    android:id="@+id/priorityName"
                    style="@style/txtTaskTitleTaskCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="2sp"
                    android:text="Name"
                    android:textColor="@color/text_black_100"
                    android:textStyle="bold"

                    />


                <TextView
                    style="@style/txtTaskTitleTaskCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"

                    android:gravity="center_vertical"
                    android:text="@string/datedone"
                    android:textStyle="bold"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/datedoneTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"


                    android:gravity="center_vertical"
                    android:textColor="@color/white1"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"


                    android:gravity="center_vertical"
                    android:textColor="@color/white1"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/txtTaskTitleTaskCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="@string/status"
                    android:visibility="gone"
                    android:textStyle="bold" />

                <com.apg.mobile.roundtextview.RoundTextView
                    android:id="@+id/statusTask2"

                    style="@style/rtv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="right"
                    android:layout_weight="0"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="Name" />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>



</androidx.cardview.widget.CardView>