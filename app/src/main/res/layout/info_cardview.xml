<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/allinfoinfo"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    style="@style/TaskCardViewStyle"



    android:animateLayoutChanges="true"




    >




    <RelativeLayout
        android:id="@+id/taskinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"

        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lltasktitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ltasktitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                tools:ignore="MissingConstraints">


                <ImageView
                    android:id="@+id/infotype"
                    android:layout_width="@dimen/wh_button_small2"
                    android:layout_height="@dimen/wh_button_small2"
                    android:layout_weight="0"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="fitCenter"

                    />

                <TextView
                    android:id="@+id/infotitle"
                    style="@style/textLinkTaskCardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center_horizontal|right"
                    android:text="Name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/informationtitle"
                    style="@style/txtTaskTitleTaskCard2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5sp"
                    android:text="Name"
                     />


                <ImageView
                    android:id="@+id/comments"
                    android:layout_width="@dimen/wh_button_small2"
                    android:layout_height="@dimen/wh_button_small2"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"

                    android:src="@drawable/comments3"
                    android:tint="@color/colorPrimary" />


                <ImageView
                    android:id="@+id/editTask"
                    android:layout_width="@dimen/wh_button_small2"
                    android:layout_height="@dimen/wh_button_small2"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"

                    android:src="@drawable/edittask"
                    android:tint="@color/colorPrimary" />





                <ImageView
                    android:id="@+id/itemMenu"
                    android:layout_width="@dimen/wh_button_small2"
                    android:layout_height="@dimen/wh_button_small2"
                    android:layout_weight="0"

                    android:scaleType="centerInside"
                    android:src="@drawable/glyphicons_518_option_vertical"
                    android:tint="@color/colorPrimary" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/taskinformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ltasktitle"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">




                <androidx.appcompat.widget.LinearLayoutCompat

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_black_100" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ldetailstitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        tools:ignore="MissingConstraints">

                        <TextView
                            android:id="@+id/infodetail"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5sp"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_black_100" />



                    <androidx.appcompat.widget.LinearLayoutCompat

                        android:id="@+id/taskInfo1"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="2sp">

                        <TextView
                            style="@style/txtTaskTitleTaskCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"

                            android:gravity="center_vertical"
                            android:text="@string/type"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/infotype2"
                            android:layout_width="@dimen/wh_button_small3"
                            android:layout_height="@dimen/wh_button_small3"
                            android:layout_weight="0"
                            android:paddingLeft="2sp"
                            android:background="?android:attr/selectableItemBackground"
                            android:scaleType="fitCenter"

                            />

                        <TextView
                            android:id="@+id/infotype3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:paddingLeft="5sp"

                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/txtTaskTitleTaskCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"

                            android:layout_weight="0"
                            android:gravity="center_vertical"
                            android:text="@string/status"
                            android:textStyle="bold" />

                        <com.apg.mobile.roundtextview.RoundTextView
                            android:id="@+id/status"

                            style="@style/rtv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="right"
                            android:layout_weight="0"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="Name" />


                    </androidx.appcompat.widget.LinearLayoutCompat>



                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/text_black_100" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/taskInfo3"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="2sp">



                        <TextView
                            style="@style/txtTaskTitleTaskCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"

                            android:gravity="center_vertical"
                            android:text="@string/dateCreate"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/date_create"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"


                            android:gravity="center_vertical"
                            android:textColor="@color/white1"
                            android:textSize="12sp"
                            android:textStyle="bold" />



                        <TextView

                            android:id="@+id/details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:gravity="center_horizontal|right"

                            android:text="@string/details"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!--<cn.refactor.library.SmoothCheckBox
                    android:id="@+id/statusTask2"
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:layout_weight="0"
                    android:padding="4sp"
                    android:background="?android:attr/selectableItemBackground"
                    app:color_checked="@color/tint_gray" />-->

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>



</androidx.cardview.widget.CardView>