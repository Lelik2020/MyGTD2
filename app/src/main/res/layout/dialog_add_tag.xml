<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/outlinedTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="@string/tagname"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:theme="@style/EditTextThemeOverlay"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTagName2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:textColorHighlight="@color/textColorHighlight"


            />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal" >

        <TextView

            style="@style/textDialogTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"

            android:padding="0sp"
            android:text="@string/choiceColor" />

        <ImageView
            android:id="@+id/choiseColor"
            android:layout_width="@dimen/wh_button_small"
            android:layout_height="@dimen/wh_button_small"


            android:src="@drawable/square" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal" >

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/cbIsArchive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:useMaterialThemeColors="true"
            android:checked="false"
            style="@style/MySwitchMaterial2"
            android:textStyle="bold"
            android:text="@string/isarchivetag" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>