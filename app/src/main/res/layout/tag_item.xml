<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="1sp" >

    <ImageView
        android:id="@+id/iconTag"
        android:layout_width="@dimen/wh_button_small"
        android:layout_height="@dimen/wh_button_small"
        android:layout_weight="1"
        android:padding="1sp"
        android:src="@drawable/glyphicons_66_tag"

        android:visibility="visible" />

    <CheckBox
        android:id="@+id/tagName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:button="@drawable/toggle"
        android:layout_weight="1"

        android:singleLine="true"
        android:text="Sample 1"
        style="@style/textSection"
        android:theme="@style/MyCheckBox"/>

    <ImageView
        android:id="@+id/editTag"
        android:layout_width="@dimen/wh_button_small"
        android:layout_height="@dimen/wh_button_small"

        android:padding="1sp"
        android:layout_gravity="center"
        android:src="@drawable/edit"
        android:tint="@color/lt_grey_dima"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/deleteTag"
        android:layout_width="@dimen/wh_button_small"
        android:layout_height="@dimen/wh_button_small"

        android:padding="1sp"
        android:src="@drawable/glyphicons_208_remove_2"
        android:tint="@color/lt_grey_dima"
        android:visibility="visible" />

</androidx.appcompat.widget.LinearLayoutCompat>