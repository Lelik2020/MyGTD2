<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle" >
            <solid android:color="@color/colorPrimaryDark" />
            <corners android:bottomRightRadius="@dimen/dialog_button_corner_radius"
                android:topRightRadius="@dimen/dialog_button_corner_radius"
                android:bottomLeftRadius="@dimen/dialog_button_corner_radius"
                android:topLeftRadius="@dimen/dialog_button_corner_radius"/>
        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle" >
            <solid android:color="@color/colorPrimaryDark" />
            <corners android:bottomRightRadius="@dimen/dialog_button_corner_radius"
                android:topRightRadius="@dimen/dialog_button_corner_radius"
                android:bottomLeftRadius="@dimen/dialog_button_corner_radius"
                android:topLeftRadius="@dimen/dialog_button_corner_radius"/>
        </shape>
    </item>

</selector>